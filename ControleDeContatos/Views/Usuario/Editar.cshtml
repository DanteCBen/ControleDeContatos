@using ControleDeContatos.Enums
@model UsuarioModel
@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="text-center">
    <h1 class="display-4">Editar Usuário</h1>
</div>

<form asp-controller="Usuario" asp-action="Atualizar" method="post">

    <input type="hidden" asp-for="@Model.Id" />

    <div class="form-group mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="@Model.Nome" class="form-control" placeholder="Digite o nome do usuário">
        @Html.ValidationMessageFor(usuario => usuario.Nome)
    </div>

    <div class="form-group mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="@Model.Login" class="form-control" placeholder="Digite o login do usuário">
        @Html.ValidationMessageFor(usuario => usuario.Login)
    </div>

    <div class="form-group mb-3">
        <label for="nome" class="form-label">Email</label>
        <input type="text" asp-for="@Model.Email" class="form-control" placeholder="Digite o email do usuário">
        @Html.ValidationMessageFor(usuario => usuario.Email)
    </div>

    <div class="form-group mb-3">
        <label for="nome" class="form-label">Perfil</label>
        <select asp-for="@Model.Perfil" class="form-control">
            <option value="">Selecione</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
        </select>
        @Html.ValidationMessageFor(usuario => usuario.Perfil)
    </div>

    <button type="submit" class="btn btn-primary">Editar</button>
    <a class="btn btn-secondary" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a>
</form>