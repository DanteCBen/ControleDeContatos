@using ControleDeContatos.Enums
@model UsuarioModel
@{
    ViewData["Title"] = "Criar Usuário";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Usuário</h1>
</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">
    <div class="mb-3">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nomeDeContato" placeholder="Digite o nome do usuário"
            asp-for="@Model.Nome">
        @Html.ValidationMessageFor(usuario => usuario.Nome)
    </div>

    <div class="mb-3">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" placeholder="Digite o email do usuário"
            asp-for="@Model.Email">
        @Html.ValidationMessageFor(usuario => usuario.Email)
    </div>

    <div class="mb-3">
        <label for="login">Login</label>
        <input type="text" class="form-control" id="login" placeholder="Digite o login do usuário"
            asp-for="@Model.Login">
        @Html.ValidationMessageFor(usuario => usuario.Login)
    </div>

    <div class="mb-3">
        <label for="perfil">Perfil</label>
        <select asp-for="@Model.Perfil" class="form-control">
            <option value="">Selecione</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
        </select>
        @Html.ValidationMessageFor(usuario => usuario.Perfil)

    </div>

    <div class="mb-3">
        <label for="senha">Senha</label>
        <input type="password" class="form-control" id="senha" placeholder="Digite a senha do usuário"
            asp-for="@Model.Senha">
        @Html.ValidationMessageFor(usuario => usuario.Senha)
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>