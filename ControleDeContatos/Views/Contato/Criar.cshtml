@model ContatoModel
@{
    ViewData["Title"] = "Criar Contato";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="Criar" method="post">
    <div class="mb-3">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nomeDeContato" placeholder="Digite o nome do contato" asp-for="@Model.Nome">
        @Html.ValidationMessageFor(msg => msg.Nome)
    </div>

    <div class="mb-3">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email"  placeholder="Digite o email do contato" asp-for="@Model.Email">
        @Html.ValidationMessageFor(msg => msg.Email)
    </div>

    <div class="mb-3">
        <label for="celular">Celular</label>
        <input type="tel" class="form-control" id="celular" placeholder="Digite o número do contato" asp-for="@Model.Celular">
        @Html.ValidationMessageFor(msg => msg.Celular)
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>